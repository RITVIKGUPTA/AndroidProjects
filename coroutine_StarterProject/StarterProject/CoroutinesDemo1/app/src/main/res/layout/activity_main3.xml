<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity3">

    <TextView
            android:id="@+id/WorkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/getWorkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get+work status"
            app:layout_constraintBottom_toTopOf="@+id/WorkStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/veiwDatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW ALBUMS LIST"
            app:layout_constraintBottom_toTopOf="@+id/WorkStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getWorkStatus" />
</androidx.constraintlayout.widget.ConstraintLayout>